
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "hostRules": [
    {
      "matchHost": "138645654058.dkr.ecr.ap-south-1.amazonaws.com",
      "username": "AWS",
      "password": "{{ env.RENOVATE_AWS_ECR_PASSWORD }}"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "registryUrls": [
        "138645654058.dkr.ecr.ap-south-1.amazonaws.com/gitaction"
      ]
    },
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "kubernetes": {
    "fileMatch": [
      "manifests/.+\\.yaml$",
    ]
  },
  "prConcurrentLimit": 10
}
