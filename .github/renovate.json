
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],

  "dependencyDashboard": false,
  "prHourlyLimit": 10,
  "hostRules": [
    {
      "matchHost": "138645654058.dkr.ecr.ap-south-1.amazonaws.com",
      "username": "AWS",
      "password": "{{ env.RENOVATE_AWS_ECR_PASSWORD }}"
    }
  ],
  "packageRules": [
    {
     "matchDatasources": ["docker"],
     "matchPackageNames": ["138645654058.dkr.ecr.ap-south-1.amazonaws.com/gitaction"],
      "registryUrls": ["138645654058.dkr.ecr.ap-south-1.amazonaws.com"],
    },
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false
    }
  ],
  
  "kubernetes": {
    "fileMatch": [
     "(^|/)manifeste\\.ya?ml$"
    ]
  },
  "prConcurrentLimit": 10
}
